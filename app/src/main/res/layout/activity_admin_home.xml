<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/new_admin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Admin Username"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/new_admin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Admin Password"
        android:inputType="textPassword"
        android:layout_below="@id/new_admin_username"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/create_admin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create admin"
        android:layout_below="@id/new_admin_password"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
